<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Manage Approvals</title>
    
    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>
    
    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">

  </head>
  <body>
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Manage Approvals</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    
                    <div class="single-sidebar">
                    <form method="post" action="">
                        <h2 class="text text-center sidebar-title">DANH MỤC</h2>

                        <div class="thubmnail-recent">
                      <button  name ="All" class=" btn px-5 w-100 h-100" style="width: 100%; height:100%;" type="submit">Tất cả</button>
                        </div>
                        <div class="thubmnail-recent">
                      <button name="Wait" class="btn px-5 w-100 h-100" style="width: 100%; height:100%;"type="submit">Đang chờ duyệt</button>
                        </div>
                        <div class="thubmnail-recent">
                      <button name="Agree" class="btn px-5 w-100 h-100" style="width: 100%; height:100%;"type="submit">Hoàn tất</button>
                        </div>
                        <div class="thubmnail-recent">
                      <button name="Resuse" class="btn px-5 w-100 h-100" style="width: 100%; height:100%;"type="submit">Đã từ chối</button>
                        </div>
                    </form>

                    </div>
                    
                   
                </div>
                
                <div class="col-md-9">
                    <div class="product-content-right">
                        <div class="woocommerce">
                   
                                <table cellspacing="0" class="shop_table cart">
                                    <thead>
                                        <tr>
                                           
                                            <th class="product-thumbnail">stt</th>
                                            <th class="product-name">Mã giao dịch</th>
                                            <th class="product-price">Loại giao dịch</th>
                                            <th class="product-price">Ngày</th>
                                            <th class="product-quantity">Số tiền giao dịch</th>
                                            <th class="product-quantity">Trạng thái</th>
                                            <th class="product-subtotal">Chi tiết</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each historys}}
                                            <tr class="cart_item">
                                                <td class="product-thumbnail">
                                                    {{stt @index}}
                                                </td>

                                                <td class="product-name">
                                                    <a href="manageApprovals/{{this.maGiaoDich}}">{{this.maGiaoDich}}</a> 
                                                </td>

                                                <td class="product-price">
                                                    <span class="amount">{{this.loaiGiaoDich}}</span> 
                                                </td>

                                                <td class="product-price">
                                                    <span class="amount">{{this.ngay}}</span> 
                                                </td>

                                                <td class="product-quantity">
                                                    {{changeMoney tongTien}}
                                                </td>

                                                <td class="product-quantity">
                                                    {{{showTransactionStatus this.confirm}}}
                                                </td>                                                

                                                <td class="product-subtotal">
                                                    <a href="/detailsTransactionHistory/{{this.maGiaoDich}}">Chi tiết</a>
                                                </td>
                                            </tr>
                                        {{/each}}
                                        

                                        
                                     
                                    </tbody>
                                </table>
                         

                          
                        </div>                        
                    </div>                    
                </div>
            </div>
        </div>
    </div>

   
    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>
    
    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    
    <!-- jQuery sticky menu -->
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.sticky.js"></script>
    
    <!-- jQuery easing -->
    <script src="js/jquery.easing.1.3.min.js"></script>
    
    <!-- Main Script -->
    <script src="js/main.js"></script>
  </body>
</html>
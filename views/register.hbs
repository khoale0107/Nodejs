    <!-- Login -->
    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-8 col-xl-5">
                <div class="border p-3 mt-4 rounded bg-light">
                  <h3 class="text-center mt-3 mb-4">Account Registration</h3>

                    {{#if successMsg}}
                        <div class="mb-3">
                            <div class="alert alert-success  show" role="alert">
                                {{{successMsg}}}
                            </div>
                        </div>
                    {{/if}}
        
                  <form action="/register" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                      <div class="form-floating">
                        <input type="text"  value="{{sdt}}" name="sdt" class="form-control" placeholder="a">
                        <label for="floatingInput">Số điện thoại</label>
                      </div>
                    </div>
        
                    <div class="mb-3">
                      <div class="form-floating">
                        <input type="text" value="{{email}}" name="email" class="form-control" placeholder="a">
                        <label for="floatingInput">Email</label>
                      </div>
                    </div>
        
                    <div class="mb-3">
                      <div class="form-floating">
                        <input type="text" value="{{tenNguoiDung}}" name="tenNguoiDung" class="form-control" placeholder="a">
                        <label for="floatingInput">Họ và tên</label>
                      </div>
                    </div>
        
                    <div class="mb-3">
                      <div class="form-floating">
                        <input type="text" value="{{diaChi}}" name="diaChi" class="form-control" placeholder="a">
                        <label for="floatingInput">Địa chỉ</label>
                      </div>
                    </div>
                        
                    <div class="mb-3">
                      <div class="form-floating">
                          <input type="date" value="{{ngaySinh}}" name="ngaySinh" id="ngaySinh" class="form-control" placeholder="a"></input>
                          <label for="floatingTextarea">Ngày sinh</label>
                      </div>
                    </div>
        
                    <div class="mb-3">
                      <label for="formFile" class="form-label">Ảnh mặt trước CMND</label>
                      <input class="form-control" type="file" name="matTruocCMND" accept=".gif,.jpg,.png">
                    </div>

                    <div class="mb-3">
                      <label for="formFile" class="form-label">Ảnh mặt sau CMND</label>
                      <input class="form-control" type="file" name="matSauCMND" accept=".gif,.jpg,.png">
                    </div>
                    
                    <!-- alert -->
                    {{#if msg}}
                        <div class="mb-3">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{{msg}}}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {{/if}}
        
        
                    <div class="mb-3">
                      <button class="btn px-5 fw-bold text-light" type="submit">Register</button>
                    </div>
        
                    <div class="mb-2">
                      <p class="">Already have an account? <a href="/login">Login now!</a></p>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
    </div> <!-- End main content area -->
    
  
    
